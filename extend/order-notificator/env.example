# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Chat ID
# Add your bot to a channel/chat and get the chat ID from:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=-1001234567890

# Notification Settings (optional, default: true)
ENABLE_ORDER_CREATED_NOTIFICATIONS=true
ENABLE_ORDER_STATUS_CHANGE_NOTIFICATIONS=true

# Email Notification Settings (optional, default: true)
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_FROM_NAME=Cake Store
EMAIL_FROM_ADDRESS=noreply@cakestore.com

# Email SMTP Configuration (required for email notifications)
# These should match your EmailPlugin configuration
EMAIL_GMAIL_USER=your-email@gmail.com
EMAIL_GMAIL_PASSWORD=your-app-password
